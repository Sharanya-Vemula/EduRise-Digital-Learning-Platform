<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/teacher_item_bg"
    android:elevation="2dp">

    <!-- Subject Name -->
    <TextView
        android:id="@+id/subjectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/teacher_subject_text"/>

    <!-- Class Time -->
    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="14sp"
        android:textColor="@color/teacher_time_text"
        android:layout_marginTop="2dp"/>

    <!-- Class & Section -->
    <TextView
        android:id="@+id/classSectionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class - Section"
        android:textSize="14sp"
        android:textColor="@color/teacher_class_text"
        android:layout_marginTop="2dp"/>
</LinearLayout>
