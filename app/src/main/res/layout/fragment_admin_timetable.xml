<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/admin_bg">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Timetable Creation Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:padding="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create / Update Timetable"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black"/>

                <Spinner
                    android:id="@+id/classSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/sectionSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <Spinner
                    android:id="@+id/daySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/loadTimetableButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Load Timetable"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/admin_btn_primary"
                    android:textColor="@android:color/white"/>

                <LinearLayout
                    android:id="@+id/periodContainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"/>

                <Button
                    android:id="@+id/addPeriodButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Period"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/admin_btn_secondary"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save / Update Timetable"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/admin_btn_primary"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Timetable Viewing Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:padding="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Timetable"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black"/>

                <Spinner
                    android:id="@+id/viewTeacherSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/viewClassSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <Spinner
                    android:id="@+id/viewSectionSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <Spinner
                    android:id="@+id/viewDaySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/viewButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Timetable"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/admin_btn_primary"
                    android:textColor="@android:color/white"/>

                <LinearLayout
                    android:id="@+id/viewPeriodContainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
