<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor= "@color/student_dashboard_bg_start"
                android:endColor="@color/student_dashboard_bg_end"
                android:angle="135"/>
        </shape>
    </item>

    <!-- Optional subtle pattern overlay for fun -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF" /> <!-- Semi-transparent white overlay -->
        </shape>
    </item>

</layer-list>
