<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teacher_fragment_bg">

    <!-- Title -->
    <TextView
        android:text="Mark Attendance"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/teacher_text_primary"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Select Class -->
    <TextView
        android:text="Select Class"
        android:textStyle="bold"
        android:textColor="@color/teacher_text_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/classSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rounded_spinner_teacher"
        android:layout_marginBottom="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <!-- Select Date -->
    <TextView
        android:text="Select Date"
        android:textStyle="bold"
        android:textColor="@color/teacher_text_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dateText"
        android:text="Tap to select date"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textColor="@color/teacher_text_primary" />

    <!-- Student List -->
    <ListView
        android:id="@+id/studentListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="8dp"
        android:background="@color/teacher_card_bg"
        android:padding="4dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:text="Submit Attendance"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/teacher_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp" />

</LinearLayout>
